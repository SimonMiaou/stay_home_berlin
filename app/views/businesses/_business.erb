<div class="card">
  <div class="card-body">
    <h5 class="card-title"><%= link_to business.name, business_path(business) %></h5>
    <p class="card-text">
      <span class="badge badge-light"><%= business.business_type %></span>
      <span class="badge badge-light"><%= business.business_sub_type %></span>
    </p>
    <p class="card-text"><%= simple_format business.description %></p>
    <% if business.website.present? %>
      <a href="<%= business.website %>" target="_blank" class="btn btn-light">Website</a>
    <% end %>
    <% if business.order_url.present? %>
      <a href="<%= business.order_url %>" target="_blank" class="btn btn-light">Order</a>
    <% end %>
    <% if business.phone.present? %>
      <a href="tel:<%= business.phone %>" target="_blank" class="card-link">
        <svg class="bi bi-phone" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
          <path fill-rule="evenodd" d="M11 1H5a1 1 0 00-1 1v12a1 1 0 001 1h6a1 1 0 001-1V2a1 1 0 00-1-1zM5 0a2 2 0 00-2 2v12a2 2 0 002 2h6a2 2 0 002-2V2a2 2 0 00-2-2H5z" clip-rule="evenodd"/>
          <path fill-rule="evenodd" d="M8 14a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd"/>
        </svg>
        <small><%= business.phone %></small>
      </a>
    <% end %>
  </div>
</div>
